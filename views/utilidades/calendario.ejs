    $(document).ready(function () {
      // Inicializar DataTable
      let table = $('#datatable').DataTable({
        responsive: true,
        // Agrega prioridades a cada columna. La de menor prioridad (número más alto)
        // se ocultará primero cuando el espacio sea pequeño.
        columnDefs: [
          {
            className: 'dt-control',
            orderable: false,
            data: null,
            defaultContent: '', 
            targets: 0,
            responsivePriority: 1  // se queda visible lo más posible
          },
          { targets: 1, responsivePriority: 2 }, // Nombre
          { targets: 2, responsivePriority: 3 }, // Fecha
          { targets: 3, responsivePriority: 4 }, // Estatus
          { targets: 4, responsivePriority: 5 }, // Situación
          { targets: 5, responsivePriority: 6 }, // CCT
          { targets: 6, responsivePriority: 7 }, // Estatus
          { targets: 7, responsivePriority: 8 }  // Acción (se oculta primero)
        ],
        order: [[1, 'asc']]
      });
  
      // Tu evento manual de abrir/cerrar detalles
      $('#datatable tbody').on('click', 'td.dt-control', function () {
        let tr = $(this).closest('tr');
        let row = table.row(tr);
  
        if (row.child.isShown()) {
          $('div.slider', row.child()).slideUp(300, function () {
            row.child.hide();
            tr.removeClass('shown');
          });
          $('i', this).removeClass('fa-minus-circle').addClass('fa-plus-circle');
        } else {
          row.child('<div class="slider" style="display: none;">' 
                     + format(row.data()) + 
                    '</div>'
                   ).show();
          $('div.slider', row.child()).slideDown(300);
          tr.addClass('shown');
          $('i', this).removeClass('fa-plus-circle').addClass('fa-minus-circle');
        }
      });
    });
  </script>