                                    <form action="/updatePersonal" method="POST">
                                        <!-- Nombre -->
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <label for="nombre" class="mb-0">Nombre</label>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="text" id="nombre" name="nombre" class="form-control"
                                                    value="<%= profileData.nombre || '' %>" />
                                            </div>
                                        </div>
                                        <hr class="mb-2" />

                                        <!-- Apellido Paterno -->
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <label for="apellido_paterno" class="mb-0">Apellido Paterno</label>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="text" id="apellido_paterno" name="apellido_paterno"
                                                    class="form-control"
                                                    value="<%= profileData.apellido_paterno || '' %>" />
                                            </div>
                                        </div>
                                        <hr class="mb-2" />

                                        <!-- Apellido Materno -->
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <label for="apellido_materno" class="mb-0">Apellido Materno</label>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="text" id="apellido_materno" name="apellido_materno"
                                                    class="form-control"
                                                    value="<%= profileData.apellido_materno || '' %>" />
                                            </div>
                                        </div>
                                        <hr class="mb-2" />

                                        <!-- Fecha de Nacimiento -->
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <label for="fecha_nacimiento" class="mb-0">Fecha de Nacimiento</label>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="date" id="fecha_nacimiento" name="fecha_nacimiento"
                                                    class="form-control"
                                                    value="<%= profileData.fecha_nacimiento || '' %>" />
                                            </div>
                                        </div>
                                        <hr class="mb-2" />

                                        <!-- Edad -->
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <label for="edad" class="mb-0">Edad</label>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="number" id="edad" name="edad" class="form-control"
                                                    value="<%= profileData.edad || '' %>" />
                                            </div>
                                        </div>
                                        <hr class="mb-2" />

                                        <!-- RFC -->
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <label for="rfc" class="mb-0">RFC</label>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="text" id="rfc" name="rfc" class="form-control"
                                                    value="<%= profileData.rfc || '' %>" />
                                            </div>
                                        </div>
                                        <hr class="mb-2" />

                                        <!-- CURP -->
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <label for="curp" class="mb-0">CURP</label>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="text" id="curp" name="curp" class="form-control"
                                                    value="<%= profileData.curp || '' %>" />
                                            </div>
                                        </div>
                                        <hr class="mb-2" />

                                        <!-- Teléfono -->
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <label for="telefono" class="mb-0">Teléfono</label>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="text" id="telefono" name="telefono" class="form-control"
                                                    value="<%= profileData.telefono || '' %>" />
                                            </div>
                                        </div>
                                        <hr class="mb-2" />

                                        <!-- Correo -->
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <label for="correo" class="mb-0">Correo</label>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="email" id="correo" name="correo" class="form-control"
                                                    value="<%= profileData.correo || '' %>" />
                                            </div>
                                        </div>
                                        <hr class="mb-2" />

                                        <!-- Dirección -->
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <label for="direccion" class="mb-0">Dirección</label>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="text" id="direccion" name="direccion" class="form-control"
                                                    value="<%= profileData.direccion || '' %>" />
                                            </div>
                                        </div>
                                        <hr class="mb-2" />

                                        <!-- Botón Guardar -->
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <button type="submit" class="btn btn-primary">
                                                    Guardar Cambios
                                                </button>
                                            </div>
                                        </div>
                                    </form>

                                    <div class="tab-pane fade" id="pills-profile1" role="tabpanel"
                                        aria-labelledby="pills-profile-tab1">
