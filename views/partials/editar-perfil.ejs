<div class="container">
    <div class="row gutters">
        <div class="col-12">
            <div class="card h-100">
                <div class="card-body">
                    <div class="bd-example">
                        <form action="#" method="POST" enctype="multipart/form-data">
                            <div class="tab-content" id="pills-tabContent">
                                <div class="tab-pane fade show active" id="pills-home1" role="tabpanel"
                                    aria-labelledby="pills-home-tab1">
                                    <div class="row gutters">
                                        <div class="row">
                                            <hr class="w-100">
                                            <!-- Nombre -->
                                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                                <div class="form-group">
                                                    <label for="nombre">Nombre</label>
                                                    <input type="text" class="form-control" id="nombre" name="nombre"
                                                        placeholder="Ingrese Nombre" value="<%= profileData.nombre %>">
                                                </div>
                                            </div>

                                            <!-- Apellido Paterno -->
                                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                                <div class="form-group">
                                                    <label for="apellido_paterno">Apellido Paterno</label>
                                                    <input type="text" class="form-control" id="apellido_paterno"
                                                        name="apellido_paterno" placeholder="Ingrese Apellido Paterno"
                                                        value="<%= profileData.apellido_paterno %>">
                                                </div>
                                            </div>

                                            <!-- Apellido Materno -->
                                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                                <div class="form-group">
                                                    <label for="apellido_materno">Apellido Materno</label>
                                                    <input type="text" class="form-control" id="apellido_materno"
                                                        name="apellido_materno" placeholder="Ingrese Apellido Materno"
                                                        value="<%= profileData.apellido_materno %>">
                                                </div>
                                            </div>

                                            <!-- Fecha de Nacimiento -->
                                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                                <div class="form-group">
                                                    <label for="fecha_nacimiento">Fecha de Nacimiento</label>
                                                    <input type="date" class="form-control" id="fecha_nacimiento"
                                                        name="fecha_nacimiento"
                                                        value="<%= profileData.fecha_nacimiento %>">
                                                </div>
                                            </div>

                                            <!-- RFC -->
                                            <div class="form-group">
                                                <label for="rfc">RFC</label>
                                                <input type="text" class="form-control" id="rfc" name="rfc"
                                                    placeholder="Ingrese RFC" value="<%= profileData.rfc %>">
                                            </div>

                                            <!-- CURP -->
                                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                                <div class="form-group">
                                                    <label for="curp">CURP</label>
                                                    <input type="text" class="form-control" id="curp" name="curp"
                                                        placeholder="Ingrese CURP" value="<%= profileData.curp %>">
                                                </div>
                                            </div>

                                            <!-- Teléfono -->
                                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                                <div class="form-group">
                                                    <label for="telefono">Teléfono</label>
                                                    <input type="text" class="form-control" id="telefono"
                                                        name="telefono" placeholder="Ingrese Teléfono"
                                                        value="<%= profileData.telefono %>">
                                                </div>
                                            </div>

                                            <!-- Correo -->
                                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                                <div class="form-group">
                                                    <label for="correo">Correo Electrónico</label>
                                                    <input type="email" class="form-control" id="correo" name="correo"
                                                        placeholder="Ingrese Correo" value="<%= profileData.correo %>">
                                                </div>
                                            </div>
                                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                                <div class="form-group">
                                                    <label for="sexo">Sexo</label>
                                                    <select class="form-control" id="sexo" name="sexo">
                                                        <option value="Masculino" <%=profileData.sexo==='Masculino'
                                                            ? 'selected' : '' %>>Masculino</option>
                                                        <option value="Femenino" <%=profileData.sexo==='Femenino'
                                                            ? 'selected' : '' %>>Femenino</option>
                                                        <option value="Otro" <%=profileData.sexo==='Otro' ? 'selected'
                                                            : '' %>>Otro</option>
                                                    </select>
                                                </div>
                                            </div>

                                            <!-- Dirección -->
                                            <div class=" col-12">
                                                <div class="form-group">
                                                    <label for="direccion">Dirección</label>
                                                    <input type="text" class="form-control" id="direccion"
                                                        name="direccion" placeholder="Ingrese Dirección"
                                                        value="<%= profileData.direccion %>">
                                                </div>
                                            </div>

                                            

                                            <div class="row mb-4 mt-3">
                                                <!-- Imagen -->
                                                <div class="col-3 text-center mb-3">
                                                    <img id="profile-img"
                                                        src="<%= profileData.imagen ? `/uploads/${profileData.imagen}` : '/images/avatars/avatar-default.png' %>"
                                                        alt="Imagen de perfil" class="img-fluid rounded-circle shadow"
                                                        style="max-width: 100px; height: auto;">
                                                </div>
                                                <!-- Campo para subir la imagen -->
                                                <div class="col-9">
                                                    <div class="form-group">
                                                        <label for="imagen" class="form-label">Subir nueva
                                                            imagen</label>
                                                        <input type="file" class="form-control" id="file-upload"
                                                            name="imagen">
                                                    </div>
                                                </div>
                                            </div>


                                            <!-- Cargo -->
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="cargo">Cargo</label>
                                                    <select class="form-control" id="cargo" name="cargo" required>
                                                        <!-- Opción seleccionada previamente -->
                                                        <option value="<%= detalleLaboral.cargo || '' %>" selected>
                                                            <%= detalleLaboral.cargo || 'Selecciona un cargo' %>
                                                        </option>
                                                        <!-- Opciones adicionales -->
                                                        <option value="DIRECTOR">Director</option>
                                                        <option value="SUBDIR DE GESTION">Subdir de Gestion</option>
                                                        <option value="DOCENTE">Docente</option>
                                                        <option value="AUXILIAR ADMVO">Auxiliar Admvo</option>
                                                        <option value="AUXILIAR SERVICIO">Auxiliar Servicio</option>
                                                        <option value="DOCENTE/CAMB/ACT">Docente/Camb/Act</option>
                                                        <option value="DOCENTE DE APOYO">Docente de Apoyo</option>
                                                        <option value="VELADOR">Velador</option>
                                                        <option value="DOCENTE/ATP">Docente/ATP</option>

                                                    </select>
                                                </div>
                                            </div>


                                            <!-- Tipo Organización -->
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="tipo_organizacion">Tipo de Organización</label>
                                                    <select class="form-control" id="tipo_organizacion"
                                                        name="tipo_organizacion" required>
                                                        <!-- Opción seleccionada previamente -->
                                                        <option value="<%= detalleLaboral.tipo_organizacion || '' %>"
                                                            selected>
                                                            <%= detalleLaboral.tipo_organizacion
                                                                || 'Selecciona una opción' %>
                                                        </option>
                                                        <!-- Opciones adicionales -->
                                                        <option value="Unitaria">Unitaria</option>
                                                        <option value="Bidocente">Bidocente</option>
                                                        <option value="Tridocente">Tridocente</option>
                                                        <option value="Org. Com.">Org. Com.</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <!-- Sector -->
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="sector">Sector</label>
                                                    <input type="text" class="form-control" id="sector" name="sector"
                                                        placeholder="Ingrese Sector"
                                                        value="<%= detalleLaboral.sector || '' %>" required>
                                                </div>
                                            </div>

                                            <!-- Zona -->
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="zona">Zona</label>
                                                    <input type="text" class="form-control" id="zona" name="zona"
                                                        placeholder="Ingrese Zona"
                                                        value="<%= detalleLaboral.zona || '' %>" required>
                                                </div>
                                            </div>

                                            <!-- Municipio -->
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="municipio">Municipio</label>
                                                    <input type="text" class="form-control" id="municipio"
                                                        name="municipio" placeholder="Ingrese Municipio"
                                                        value="<%= detalleLaboral.municipio || '' %>">
                                                </div>
                                            </div>


                                            <!-- Comunidad -->
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="comunidad">Comunidad</label>
                                                    <input type="text" class="form-control" id="comunidad"
                                                        name="comunidad" placeholder="Ingrese Comunidad"
                                                        value="<%= detalleLaboral.comunidad || '' %>">
                                                </div>
                                            </div>


                                            <!-- Clave CCT -->
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="clave_cct">Clave CCT</label>
                                                    <input type="text" class="form-control" id="clave_cct"
                                                        name="clave_cct" placeholder="Ingrese Clave CCT"
                                                        value="<%= detalleLaboral.clave_cct || '' %>">
                                                </div>
                                            </div>


                                            <!-- Fecha de Ingreso -->
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="fecha_ingreso">Fecha de Ingreso</label>
                                                    <input type="date" class="form-control" id="fecha_ingreso"
                                                        name="fecha_ingreso"
                                                        value="<%= detalleLaboral.fecha_ingreso || '' %>">
                                                </div>
                                            </div>

                                            <!-- Fecha de Nombramiento -->
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="fecha_nombramiento">Fecha de Nombramiento</label>
                                                    <input type="date" class="form-control" id="fecha_nombramiento"
                                                        name="fecha_nombramiento"
                                                        value="<%= detalleLaboral.fecha_nombramiento || '' %>">
                                                </div>
                                            </div>

                                            <!-- Z.E -->
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="z_e">Zona Escolar (Z.E)</label>
                                                    <input type="text" class="form-control" id="z_e" name="z_e"
                                                        placeholder="Ingrese Zona Escolar"
                                                        value="<%= detalleLaboral.z_e || '' %>">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row gutters mt-3">
                                <div class="col-12 text-right">
                                    <button type="submit" class="btn btn-primary">Guardar</button>
                                    <button type="reset" class="btn btn-secondary">Cancelar</button>
                                </div>
                            </div>
                        </form>
                        <!-- Botones -->
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>