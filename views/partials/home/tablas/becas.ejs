<div class="table-responsive">
    <table id="datatable" class="table table-striped" data-toggle="data-table">
        <thead>
            <tr>
                <th class="text-center" style="width: 50px;">Acci√≥n</th>
                <th class="text-center">NP</th>
                <th class="text-center">Fecha</th>
                <th class="text-center">Nombre</th>
                <th class="text-center">CCT</th>
                <th class="text-center">Vacante</th>
            </tr>
        </thead>
        <tbody>
            <% becas.forEach(beca => { %>
            <tr>
                <td>
                    <div class="flex align-items-center list-user-action text-center">
                        <a class="btn btn-sm btn-icon btn-primary" data-bs-toggle="tooltip"
                        data-bs-placement="top" title="Ver Perfil" href="/perfil/<%= beca.personal_id %>">
                            <span class="btn-inner">
                                <svg class="icon-20" width="20" viewBox="0 0 24 24"
                                    fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" clip-rule="evenodd"
                                        d="M9.87651 15.2063C6.03251 15.2063 2.74951 15.7873 2.74951 18.1153C2.74951 20.4433 6.01251 21.0453 9.87651 21.0453C13.7215 21.0453 17.0035 20.4633 17.0035 18.1363C17.0035 15.8093 13.7415 15.2063 9.87651 15.2063Z"
                                        stroke="currentColor" stroke-width="1.5"
                                        stroke-linecap="round" stroke-linejoin="round">
                                    </path>
                                    <path fill-rule="evenodd" clip-rule="evenodd"
                                        d="M9.8766 11.886C12.3996 11.886 14.4446 9.841 14.4446 7.318C14.4446 4.795 12.3996 2.75 9.8766 2.75C7.3546 2.75 5.3096 4.795 5.3096 7.318C5.3006 9.832 7.3306 11.877 9.8456 11.886H9.8766Z"
                                        stroke="currentColor" stroke-width="1.5"
                                        stroke-linecap="round" stroke-linejoin="round">
                                    </path>
                                    <path d="M19.2036 8.66919V12.6792" stroke="currentColor"
                                        stroke-width="1.5" stroke-linecap="round"
                                        stroke-linejoin="round">
                                    </path>
                                    <path d="M21.2497 10.6741H17.1597" stroke="currentColor"
                                        stroke-width="1.5" stroke-linecap="round"
                                        stroke-linejoin="round">
                                    </path>
                                </svg>
                            </span>
                        </a>
                    </div>
                </td>
                <td>
                    <div class="d-flex align-items-center">
                        <h6 class="mb-0"><%= beca.np %></h6>
                    </div>
                </td>
                <td class="text-center text-dark">
                    <% if (beca.fecha) {const fecha=new
                        Date(beca.fecha); const opciones={ day: '2-digit' ,
                        month: 'short' , year: '2-digit' }; const
                        fechaFormateada=fecha.toLocaleDateString('es-ES',
                        opciones).replace(/^\w/, c=> c.toUpperCase());
                        %>
                        <%= fechaFormateada.replace('.', '' ) %>
                            <% } %>
                </td>
                <td class="text-primary fz-5">
                    <div class="d-flex align-items-center">
                        <img src="/uploads/<%= beca.imagen ? beca.imagen : 'avatar-default.png' %>" alt="Foto del docente" class="rounded-circle me-3" style="width: 40px; height: 40px;">

                        <div>
                            <span class="fw-bold" style="font-size: 14px;"><%= beca.nombre_docente %></span><br>

                            <small class="text-muted"><%= beca.correo_docente %></small>
                        </div>
                    </div>
                </td>
                <td class="text-dark"><%= beca.cct_sale %></td>
                <td class="text-end">
                    <span class="badge rounded-pill bg-success"><%= beca.vacante %></span>
                </td>

            </tr>
            <% }); %>
        </tbody>
    </table>
</div>