<div class="row mb-2">
    <div class="col-sm-3 fw-bold">Fecha Registro:</div>
    <div class="col-sm-9 text-secondary">
        <span>
            <%= dato.fecha ? new Date(dato.fecha).toLocaleDateString('es-MX', { year: 'numeric' , month: '2-digit' ,
                day: '2-digit' }) : "Sin fecha" %>
        </span>
    </div>
</div>
<hr class="mb-2" style="border-top: 1px solid #828282;">

<div class="row mb-2">
    <div class="col-sm-3 fw-bold">Tipo de Solicitud:</div>
    <div class="col-sm-9 text-secondary">
        <span>
            <%= dato.tipo_solicitud || "Sin especificar" %>
        </span>
    </div>
</div>
<hr class="mb-2" style="border-top: 1px solid #828282;">

<div class="mt-3">
    <h6 class="badge bg-primary fs-6">Situación:</h6>
    <p class="mb-0"><%= dato.situacion || "N/A" %></p>
</div>
<hr class="mb-2" style="border-top: 1px solid #828282;">


<button class="btn btn-primary col-12" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample"
    aria-expanded="false" aria-controls="collapseExample">Ver Más</button>
<div class="collapse" id="collapseExample">
    <div class="card card-body">
        <div class="row mb-2">
            <div class="col-sm-3 fw-bold">Fecha Documento:</div>
            <div class="col-sm-9 text-secondary">
                <span>
                    <%= dato.fecha_documento ? new Date(dato.fecha_documento).toLocaleDateString('es-MX', {
                        year: 'numeric' , month: '2-digit' , day: '2-digit' }) : "Sin fecha" %>
                </span>
            </div>
        </div>
        <hr class="mb-2" style="border-top: 1px solid #828282;">

        <div class="row mb-2">
            <div class="col-sm-3 fw-bold">Departamento:</div>
            <div class="col-sm-9 text-secondary">
                <span>
                    <%= dato.departamento || "Sin especificar" %>
                </span>
            </div>
        </div>
        <hr class="mb-2" style="border-top: 1px solid #828282;">

        <div class="row mb-2">
            <div class="col-sm-3 fw-bold">CCT:</div>
            <div class="col-sm-9 text-secondary">
                <%= dato.nombre_municipio || "N/A" %> -
                    <%= dato.nombre_comunidad || "N/A" %> -
                        <%= dato.cct || "N/A" %>
            </div>
        </div>
        <hr class="mb-2" style="border-top: 1px solid #828282;">

        <div class="row mb-2">
            <div class="col-sm-3 fw-bold">Tipo Organizacion:</div>
            <div class="col-sm-9 text-secondary">
                <span>
                    <%= dato.tipo_organizacion %>
                </span>
            </div>
        </div>
        <hr class="mb-2" style="border-top: 1px solid #828282;">

        <div class="row mb-2 mt-2">
            <div class="col-12 col-md-3 fw-bold mb-2 mb-md-0">Número de Alumnos:</div>
            <div class="col-12 col-md-9 text-secondary d-flex flex-wrap">
                <div class="me-3 mb-2">
                    <strong class="text-primary">1º:</strong>
                    <span class="p-2 border border-primary rounded d-inline-block">
                        <%= dato.grado_1 || 0 %>
                    </span>
                </div>
                <div class="me-3 mb-2">
                    <strong class="text-primary">2º:</strong>
                    <span class="p-2 border border-primary rounded d-inline-block">
                        <%= dato.grado_2 || 0 %>
                    </span>
                </div>
                <div class="mb-2">
                    <strong class="text-primary">3º:</strong>
                    <span class="p-2 border border-primary rounded d-inline-block">
                        <%= dato.grado_3 || 0 %>
                    </span>
                </div>
            </div>
        </div>
        
        <hr class="mb-2" style="border-top: 1px solid #828282;">

        <div class="row mb-2">
            <div class="col-sm-3 fw-bold">Función del Docente:</div>
            <div class="col-sm-9 text-secondary">
                <span>
                    <%= dato.funcion_docente || "Estatus no especificado" %>
                </span>
            </div>
        </div>
        <hr class="mb-2" style="border-top: 1px solid #828282;">

        <div class="row mb-2">
            <div class="col-sm-3">
                <strong class="text-primary">Inicio Movimiento:</strong>
                <span>
                    <%= dato.inicio_movimiento ? new Date(dato.inicio_movimiento).toLocaleDateString('es-MX', {
                        year: 'numeric' , month: '2-digit' , day: '2-digit' }) : "N/A" %>
                </span>
            </div>
            <div class="col-sm-3">
                <strong class="text-primary">Término Movimiento:</strong>
                <span>
                    <%= dato.termino_movimiento ? new Date(dato.termino_movimiento).toLocaleDateString('es-MX', {
                        year: 'numeric' , month: '2-digit' , day: '2-digit' }) : "N/A" %>
                </span>
            </div>
        </div>

        <hr class="mb-2" style="border-top: 1px solid #828282;">
</div>